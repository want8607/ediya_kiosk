<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="app_mode"
        android:title="모드 설정"
        android:summary="기본모드, 다크모드를 설정할 수 있습니다."
        android:entries="@array/app_mode"
        android:entryValues="@array/app_mode"
        android:defaultValue="기본 모드"
        android:icon="@drawable/ic_dark_mode"
        android:iconSpaceReserved="true"
        />
    <ListPreference
        android:key="app_language"
        android:title="언어 설정"
        android:summary="기본언어를 설정할 수 있습니다."
        android:entries="@array/app_language"
        android:entryValues="@array/app_language"
        android:defaultValue="한국어"
        android:icon="@drawable/ic_language"
        android:iconSpaceReserved="true"
        />
</PreferenceScreen>