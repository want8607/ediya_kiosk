<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ediya_blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--초기페이지 이디야 로고-->
            <ImageView
                android:id="@+id/ediya_logo"
                android:layout_width="@dimen/ediya_main_logo_width"
                android:layout_height="@dimen/ediya_main_logo_height"
                android:adjustViewBounds="true"
                android:src="@mipmap/ediya_main_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15" />
            <!--  뒤로가기 화살표  -->

            <ImageButton
                android:layout_width="@dimen/arrow_width"
                android:layout_height="@dimen/arrow_height"
                android:background="@null"
                android:src="@drawable/ic_arrow_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ediya_logo"
                app:layout_constraintVertical_bias="0.3">


                <EditText
                    android:id="@+id/input_id"
                    android:layout_width="@dimen/rounded_rectangle_width"
                    android:layout_height="@dimen/rounded_rectangle_height"
                    android:background="@drawable/rounded_rectangle"
                    android:fontFamily="@font/app_main_font"
                    android:hint="@string/id"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/ediya_blue"
                    android:textColorHint="@color/ediya_blue"
                    android:textSize="@dimen/loginpage_rectangle_textsize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="@dimen/rounded_rectangle_width"
                    android:layout_height="@dimen/rounded_rectangle_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_rectangle"
                    android:fontFamily="@font/app_main_font"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ediya_blue"
                    android:textSize="@dimen/loginpage_rectangle_textsize"
                    app:layout_constraintStart_toStartOf="@+id/input_id"
                    app:layout_constraintTop_toBottomOf="@+id/input_id" />

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="@dimen/rounded_rectangle_width"
                    android:layout_height="@dimen/rounded_rectangle_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/blue_rounded_button"
                    android:fontFamily="@font/app_main_font"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/loginpage_rectangle_textsize"
                    app:layout_constraintStart_toStartOf="@+id/input_password"
                    app:layout_constraintTop_toBottomOf="@+id/input_password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=""
                    app:layout_constraintStart_toStartOf="@+id/login_button"
                    app:layout_constraintTop_toBottomOf="@id/login_button" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>