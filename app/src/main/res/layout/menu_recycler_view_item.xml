<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_list1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/menu_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/category_background"
        android:src="@drawable/americano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maruburi"
        android:text="아메리카노"
        android:textColor="@color/black"
        android:textSize="@dimen/menu_korean_name_size"
        android:layout_marginTop="23dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/menu_image"
        app:layout_constraintTop_toTopOf="@+id/menu_image" />

    <TextView
        android:id="@+id/menu_english_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/maruburi"
        android:text="Americano"
        android:textColor="@color/gray"
        android:textSize="@dimen/menu_english_name_size"
        app:layout_constraintStart_toStartOf="@+id/menu_name"
        app:layout_constraintTop_toBottomOf="@+id/menu_name" />

    <TextView
        android:id="@+id/menu_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/maruburi"
        android:text="5,000원"
        android:textSize="@dimen/menu_cost_size"
        app:layout_constraintStart_toStartOf="@+id/menu_english_name"
        app:layout_constraintTop_toBottomOf="@+id/menu_english_name" />

</androidx.constraintlayout.widget.ConstraintLayout>