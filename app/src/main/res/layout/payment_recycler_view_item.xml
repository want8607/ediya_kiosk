<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/payment_recycler_view_background"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/payment_recyclerview_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/category_background"
        android:src="@drawable/americano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/payment_recyclerview_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/maruburi"
        android:text="커피"
        android:textColor="@color/main_text_color"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/payment_recyclerview_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maruburi"
        android:layout_marginTop="5dp"
        android:text="X"
        android:textColor="@color/main_text_color"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/payment_recyclerview_menu_num"
        app:layout_constraintStart_toStartOf="@+id/payment_recyclerview_menu_name"
        app:layout_constraintTop_toBottomOf="@+id/payment_recyclerview_menu_name" />

    <TextView
        android:id="@+id/payment_recyclerview_menu_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maruburi"
        android:text="2"
        android:textColor="@color/main_text_color"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>